{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}Your Symfony App{% endblock %}</title>
    {% block stylesheets %}
   <style>
        /* Apply styles to the table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        /* Style for table headers */
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        /* Alternating row colors for better readability */
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    {% endblock %}
</head> 
<body>
    {% block body %}
    <h1>Détails du client :</h1>
  
       <table class="table">
        <tr>
            <th class="col-sm-3">Attribut</th>
            <th class="col-sm-9">Valeur</th>
        </tr>
        <tr>
            <td>Nom du client</td>
            <td>{{ clients.nom_client }}</td>
        </tr>
        <tr>
            <td>Prénom du client</td>
            <td>{{ clients.prenom_client }}</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>{{ clients.adresse_client }}</td>
        </tr>
        <tr>
            <td>Date de naissance</td>
            <td>{{ clients.date_de_naissance | date('Y-m-d') }}</td>
        </tr>
        <tr>
            <td>Situation familiale</td>
            <td>{{ clients.situation_familiale }}</td>
        </tr>
        <tr>
            <td>Profession</td>
            <td>{{ clients.profession }}</td>
        </tr>
        {# Add other fields of the client here #}
    </table>    
    
{% endblock %}
</body>
</html>